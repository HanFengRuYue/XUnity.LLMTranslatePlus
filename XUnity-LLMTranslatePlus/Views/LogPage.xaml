<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="XUnity_LLMTranslatePlus.Views.LogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XUnity_LLMTranslatePlus.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <TextBlock Grid.Row="0" 
                   Text="日志监控" 
                   Style="{StaticResource TitleTextBlockStyle}" 
                   Margin="0,0,0,16"/>

        <!-- 顶部统计栏 -->
        <Grid Grid.Row="1" Margin="0,0,0,16" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 当前状态卡片 -->
            <Border Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="当前状态" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse x:Name="StatusIndicator"
                                 Width="12"
                                 Height="12"
                                 Fill="{ThemeResource SystemFillColorCriticalBrush}"/>
                        <TextBlock x:Name="LogStatusText"
                                   Text="已停止"
                                   Style="{StaticResource BodyTextBlockStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 已翻译卡片 -->
            <Border Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="已翻译" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock x:Name="SuccessCountText"
                               Text="0"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                </StackPanel>
            </Border>

            <!-- 翻译队列卡片 -->
            <Border Grid.Column="2"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="翻译队列" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock x:Name="QueueCountText"
                               Text="0"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                </StackPanel>
            </Border>

            <!-- 翻译失败卡片 -->
            <Border Grid.Column="3"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel Spacing="8">
                    <TextBlock Text="翻译失败" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock x:Name="FailureCountText"
                               Text="0"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 日志显示区域 -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 过滤器工具栏 -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        Spacing="16" 
                        Margin="0,0,0,12">
                <TextBlock Text="日志级别：" VerticalAlignment="Center"/>
                <CheckBox x:Name="InfoCheckBox" 
                          Content="Info" 
                          Checked="LogFilterChanged"
                          Unchecked="LogFilterChanged"/>
                <CheckBox x:Name="WarningCheckBox" 
                          Content="Warning" 
                          Checked="LogFilterChanged"
                          Unchecked="LogFilterChanged"/>
                <CheckBox x:Name="ErrorCheckBox" 
                          Content="Error" 
                          Checked="LogFilterChanged"
                          Unchecked="LogFilterChanged"/>
                <CheckBox x:Name="DebugCheckBox" 
                          Content="Debug" 
                          Checked="LogFilterChanged"
                          Unchecked="LogFilterChanged"/>
                
                <Border Width="1" 
                        Background="{ThemeResource DividerStrokeColorDefaultBrush}" 
                        Height="20"/>
                
                <ToggleSwitch x:Name="AutoScrollToggle" 
                              OnContent="自动滚动" 
                              OffContent="自动滚动"
                              IsOn="True"
                              MinWidth="120"/>
            </StackPanel>

            <!-- 日志列表 -->
            <Border Grid.Row="1" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8">
                <ScrollViewer x:Name="LogScrollViewer" 
                              VerticalScrollBarVisibility="Auto"
                              Padding="0,0,8,0">
                    <ListView x:Name="LogListView" 
                              SelectionMode="None"
                              ItemsSource="{x:Bind LogEntries, Mode=OneWay}">
                        <!-- 禁用过渡动画 -->
                        <ListView.ItemContainerTransitions>
                            <TransitionCollection/>
                        </ListView.ItemContainerTransitions>
                        <!-- 启用虚拟化以提升性能 -->
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 时间戳 -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Timestamp}" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               FontFamily="Consolas"
                                               Margin="0,0,16,0"
                                               VerticalAlignment="Top"/>

                                    <!-- 日志级别 -->
                                    <Border Grid.Column="1" 
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Top">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding LevelColor}"/>
                                        </Border.Background>
                                        <TextBlock Text="{Binding Level}" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"/>
                                    </Border>

                                    <!-- 消息 -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Message}" 
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Top"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- 底部操作栏 -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    Spacing="12" 
                    Margin="0,16,0,0">
            <Button Click="ClearLogButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                    <TextBlock Text="清空日志"/>
                </StackPanel>
            </Button>
            
            <Button Click="ExportLogButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xEDE1;" FontSize="16"/>
                    <TextBlock Text="导出日志"/>
                </StackPanel>
            </Button>
            
            <Button x:Name="PauseResumeButton" 
                    Click="PauseResumeButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon x:Name="PauseResumeIcon" Glyph="&#xE769;" FontSize="16"/>
                    <TextBlock x:Name="PauseResumeText" Text="暂停记录"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>

