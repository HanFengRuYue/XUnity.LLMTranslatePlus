<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="XUnity_LLMTranslatePlus.Views.TextEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XUnity_LLMTranslatePlus.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <TextBlock Grid.Row="0" 
                   Text="文本编辑器" 
                   Style="{StaticResource TitleTextBlockStyle}" 
                   Margin="0,0,0,16"/>

        <!-- 工具栏 -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 文件信息 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="24">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="总条目数：" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TotalEntriesText" 
                               Text="0" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="已翻译：" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TranslatedEntriesText" 
                               Text="0" 
                               Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="未翻译：" VerticalAlignment="Center"/>
                    <TextBlock x:Name="UntranslatedEntriesText" 
                               Text="0" 
                               Foreground="{ThemeResource SystemFillColorAttentionBrush}"
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- 批量操作按钮 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Click="TranslateAllButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE774;" FontSize="14"/>
                        <TextBlock Text="全部翻译"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="ImportButton" Click="ImportButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE8B5;" FontSize="14"/>
                        <TextBlock Text="导入"/>
                    </StackPanel>
                </Button>
                
                <Button Click="ExportButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xEDE1;" FontSize="14"/>
                        <TextBlock Text="导出"/>
                    </StackPanel>
                </Button>
                
                <Button Click="RefreshButton_Click">
                    <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 双栏布局 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：文本列表 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 搜索框 -->
                <AutoSuggestBox Grid.Row="0" 
                                x:Name="SearchBox"
                                PlaceholderText="搜索键或值..."
                                QueryIcon="Find"
                                Margin="0,0,0,8"
                                TextChanged="SearchBox_TextChanged"/>

                <!-- 过滤器 -->
                <ComboBox Grid.Row="1" 
                          x:Name="FilterComboBox"
                          SelectedIndex="0"
                          HorizontalAlignment="Stretch"
                          Margin="0,0,0,8"
                          SelectionChanged="FilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="全部"/>
                    <ComboBoxItem Content="未翻译"/>
                    <ComboBoxItem Content="已翻译"/>
                </ComboBox>

                <!-- 列表视图 -->
                <Border Grid.Row="2" 
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8">
                    <ListView x:Name="TranslationListView" 
                              SelectionMode="Single"
                              ItemsSource="{x:Bind FilteredEntries, Mode=OneWay}"
                              SelectionChanged="EntryListView_SelectionChanged">
                        <!-- 禁用过渡动画 -->
                        <ListView.ItemContainerTransitions>
                            <TransitionCollection/>
                        </ListView.ItemContainerTransitions>
                        <!-- 启用虚拟化以提升性能 -->
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 键（原文） -->
                                    <TextBlock Grid.Row="0" 
                                               Grid.Column="0"
                                               Text="{Binding Key}" 
                                               TextWrapping="Wrap"
                                               FontWeight="SemiBold"
                                               MaxLines="2"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- 状态图标 - 只在IsTranslated为true时显示 -->
                                    <FontIcon Grid.Row="0" 
                                              Grid.Column="1"
                                              Glyph="&#xE73E;" 
                                              FontSize="14"
                                              Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                              Margin="8,0,0,0">
                                        <FontIcon.Visibility>
                                            <Binding Path="IsTranslated">
                                                <Binding.Converter>
                                                    <local:BoolToVisibilityConverter/>
                                                </Binding.Converter>
                                            </Binding>
                                        </FontIcon.Visibility>
                                    </FontIcon>

                                    <!-- 值（译文） -->
                                    <TextBlock Grid.Row="1" 
                                               Grid.Column="0"
                                               Grid.ColumnSpan="2"
                                               Text="{Binding Value}" 
                                               TextWrapping="Wrap"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               MaxLines="2"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,4,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
            </Grid>

            <!-- 分隔符 -->
            <Border Grid.Column="1" 
                    Width="1" 
                    Background="{ThemeResource DividerStrokeColorDefaultBrush}" 
                    Margin="16,0"/>

            <!-- 右侧：编辑面板 -->
            <Grid Grid.Column="2">
                <Grid>
                    <ScrollViewer x:Name="EditorScrollViewer" Visibility="Collapsed" Padding="0,0,16,0">
                        <StackPanel Spacing="16" x:Name="EditorPanel">
                        <!-- 原文（键） -->
                        <StackPanel Spacing="8">
                            <Grid>
                                <TextBlock Text="原文（键）"
                                           Style="{StaticResource SubtitleTextBlockStyle}"/>
                                <Button HorizontalAlignment="Right"
                                        Click="CopyOriginalButton_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE894;" FontSize="14"/>
                                        <TextBlock Text="清除译文"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Padding="12">
                                <TextBlock x:Name="OriginalTextBlock" 
                                           TextWrapping="Wrap"
                                           IsTextSelectionEnabled="True"/>
                            </Border>
                        </StackPanel>

                        <!-- 译文（值） -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="译文（值）" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBox x:Name="TranslatedTextBox" 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap"
                                     MinHeight="100"
                                     MaxHeight="300"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- 特殊符号 -->
                        <StackPanel x:Name="SpecialCharsPanel" Spacing="8" Visibility="Collapsed">
                            <TextBlock Text="特殊符号" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <InfoBar x:Name="SpecialCharsInfoBar"
                                     Severity="Warning" 
                                     IsOpen="True" 
                                     IsClosable="False"
                                     Message="检测到特殊符号"/>
                        </StackPanel>

                        <!-- 操作按钮 -->
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Style="{StaticResource AccentButtonStyle}"
                                    Click="SaveButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE74E;" FontSize="14"/>
                                    <TextBlock Text="保存"/>
                                </StackPanel>
                                <Button.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="S" Modifiers="Control"/>
                                </Button.KeyboardAccelerators>
                            </Button>

                            <Button Click="UndoButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="&#xE7A7;" FontSize="14"/>
                                    <TextBlock Text="撤销"/>
                                </StackPanel>
                                <Button.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="Z" Modifiers="Control"/>
                                </Button.KeyboardAccelerators>
                            </Button>
                        </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 空状态 -->
                    <StackPanel x:Name="EmptyStatePanel" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Spacing="12">
                        <FontIcon Glyph="&#xE70F;" 
                                  FontSize="48" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="请从左侧列表选择一个条目进行编辑" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>

