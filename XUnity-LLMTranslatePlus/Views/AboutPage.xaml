<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="XUnity_LLMTranslatePlus.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XUnity_LLMTranslatePlus.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="0,0,16,0">
        <StackPanel Spacing="24" Margin="0,0,0,24" MaxWidth="800" HorizontalAlignment="Left">
            <!-- 页面标题 -->
            <TextBlock Text="关于" Style="{StaticResource TitleTextBlockStyle}"/>

            <!-- 应用信息卡片 -->
            <StackPanel Spacing="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                <!-- 应用图标和名称 -->
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <Image Source="ms-appx:///Assets/Square150x150Logo.png"
                           Width="64" Height="64"/>
                    <StackPanel VerticalAlignment="Center" Spacing="4">
                        <TextBlock Text="XUnity大语言模型翻译Plus"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock Text="版本 1.0.0"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- 应用描述 -->
                <TextBlock TextWrapping="Wrap">
                    <Run Text="基于 WinUI 3 开发的游戏文本翻译工具，支持通过大语言模型 API 进行高质量自动翻译。"/><LineBreak/>
                    <Run Text="配合 XUnity.AutoTranslator 插件使用，实时监控游戏文本并自动翻译。"/>
                </TextBlock>

                <!-- 技术栈 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="技术栈" FontWeight="SemiBold"/>
                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="• .NET 9.0 + WinUI 3"/><LineBreak/>
                        <Run Text="• Windows App SDK 1.8"/><LineBreak/>
                    </TextBlock>
                </StackPanel>

                <!-- 链接 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="相关链接" FontWeight="SemiBold"/>
                    <HyperlinkButton Content="GitHub 仓库"
                                     NavigateUri="https://github.com/HanFengRuYue/XUnity.LLMTranslatePlus"/>
                    <HyperlinkButton Content="问题反馈"
                                     NavigateUri="https://github.com/HanFengRuYue/XUnity.LLMTranslatePlus/issues"/>
                </StackPanel>

                <!-- 开源协议 -->
                <StackPanel Spacing="8">
                    <TextBlock Text="开源协议" FontWeight="SemiBold"/>
                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="本软件基于 MIT License 开源"/><LineBreak/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- 系统信息卡片 -->
            <StackPanel Spacing="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                <TextBlock Text="系统信息" FontWeight="SemiBold" Style="{StaticResource SubtitleTextBlockStyle}"/>

                <StackPanel Spacing="8">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="配置文件路径:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ConfigPathText" TextWrapping="Wrap" IsTextSelectionEnabled="True"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="应用数据文件夹:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="AppDataPathText" TextWrapping="Wrap" IsTextSelectionEnabled="True"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="运行时:" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text=".NET 9.0 Desktop Runtime + Windows App SDK 1.8"/>
                    </Grid>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Spacing="8">
                    <Button Click="OpenAppDataFolder_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8B7;" FontSize="16"/>
                            <TextBlock Text="打开应用数据文件夹"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- 危险区域 -->
            <StackPanel Spacing="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                <TextBlock Text="警告"
                           FontWeight="SemiBold"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                <TextBlock TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    <Run Text="以下操作将无法撤销，请谨慎操作。"/>
                </TextBlock>

                <Button Click="ResetSettings_Click" Style="{StaticResource AccentButtonStyle}" Background="{ThemeResource SystemFillColorCriticalBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                        <TextBlock Text="删除配置文件并重置所有设置"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
