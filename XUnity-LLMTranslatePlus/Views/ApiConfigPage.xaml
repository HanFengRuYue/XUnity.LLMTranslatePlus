<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="XUnity_LLMTranslatePlus.Views.ApiConfigPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XUnity_LLMTranslatePlus.Views"
    xmlns:models="using:XUnity_LLMTranslatePlus.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <ScrollViewer Padding="0,0,16,0" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="16" Margin="0,0,0,24" HorizontalAlignment="Stretch">
            <!-- 页面标题 -->
            <TextBlock Text="API 配置" Style="{StaticResource TitleTextBlockStyle}"/>

            <InfoBar Severity="Informational"
                     IsOpen="True"
                     IsClosable="False"
                     Message="系统使用多API端点智能负载均衡，快速API自动处理更多任务"/>

            <!-- API端点列表 -->
            <Expander x:Name="EndpointsExpander"
                      Header="API端点管理"
                      IsExpanded="True"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Stretch">
                <StackPanel Spacing="12" Margin="0,12,0,0">
                    <!-- 工具栏 -->
                    <Grid>
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                            <Button Click="AddEndpointButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE710;" FontSize="14"/>
                                    <TextBlock Text="添加API"/>
                                </StackPanel>
                            </Button>
                            <Button Click="TestAllButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE895;" FontSize="14"/>
                                    <TextBlock Text="全部测试"/>
                                </StackPanel>
                            </Button>
                            <Button Click="RefreshStatsButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                                    <TextBlock Text="刷新统计"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <TextBlock x:Name="EndpointCountText"
                                   Text="共 0 个端点"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   Foreground="Gray"/>
                    </Grid>

                    <!-- 端点列表 -->
                    <ListView x:Name="EndpointsListView"
                              SelectionMode="None"
                              MaxHeight="500"
                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                              BorderThickness="1"
                              CornerRadius="8">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 启用开关 -->
                                    <ToggleSwitch Grid.Column="0"
                                                  IsOn="{Binding IsEnabled, Mode=TwoWay}"
                                                  MinWidth="0"
                                                  OffContent=""
                                                  OnContent=""
                                                  Toggled="EndpointToggle_Toggled"/>

                                    <!-- 端点信息 -->
                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                        <TextBlock FontSize="12" Foreground="Gray">
                                            <Run Text="平台:"/>
                                            <Run Text="{Binding Platform}"/>
                                            <Run Text=" | 模型:"/>
                                            <Run Text="{Binding ModelName}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Url}"
                                                   FontSize="11"
                                                   Foreground="Gray"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- 统计信息占位符 -->
                                        <TextBlock x:Name="StatsText"
                                                   FontSize="11"
                                                   Foreground="Green"
                                                   Text="等待统计数据..."
                                                   Tag="{Binding Id}"/>
                                    </StackPanel>

                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                        <Button Content="编辑"
                                                Click="EditEndpointButton_Click"
                                                Tag="{Binding Id}"
                                                Style="{StaticResource AccentButtonStyle}"
                                                Padding="8,4"/>
                                        <Button Content="测试"
                                                Click="TestEndpointButton_Click"
                                                Tag="{Binding Id}"
                                                Padding="8,4"/>
                                        <Button Content="删除"
                                                Click="DeleteEndpointButton_Click"
                                                Tag="{Binding Id}"
                                                Padding="8,4"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- 空状态提示 -->
                    <Border x:Name="EmptyStateBorder"
                            Visibility="Collapsed"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="24"
                            Background="{ThemeResource LayerFillColorDefaultBrush}">
                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE946;" FontSize="48" Foreground="Gray"/>
                            <TextBlock Text="还没有API端点" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="点击上方【添加API】按钮创建第一个端点"
                                       FontSize="12"
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Expander>

            <!-- 自动保存提示 -->
            <InfoBar Severity="Informational"
                     IsOpen="True"
                     IsClosable="False"
                     Message="所有配置更改将自动保存"/>
        </StackPanel>
    </ScrollViewer>
</Page>
