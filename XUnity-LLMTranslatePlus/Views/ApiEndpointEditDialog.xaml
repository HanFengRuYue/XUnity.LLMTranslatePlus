<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="XUnity_LLMTranslatePlus.Views.ApiEndpointEditDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="API端点配置"
    PrimaryButtonText="保存"
    CloseButtonText="取消"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    CloseButtonClick="ContentDialog_CloseButtonClick">

    <ScrollViewer MaxHeight="600" VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16" Margin="0,0,0,16">
            <!-- 错误提示InfoBar -->
            <InfoBar x:Name="ErrorInfoBar"
                     Severity="Error"
                     IsOpen="False"
                     IsClosable="True"/>

            <!-- 基础配置 -->
            <TextBlock Text="基础配置" Style="{StaticResource SubtitleTextBlockStyle}"/>

            <!-- 端点名称 -->
            <StackPanel Spacing="4">
                <TextBlock Text="端点名称 *"/>
                <TextBox x:Name="NameTextBox"
                         PlaceholderText="例如：OpenAI GPT-4"
                         MaxLength="50"/>
            </StackPanel>

            <!-- 平台选择 -->
            <StackPanel Spacing="4">
                <TextBlock Text="API平台"/>
                <ComboBox x:Name="PlatformComboBox"
                          HorizontalAlignment="Stretch"
                          SelectionChanged="PlatformComboBox_SelectionChanged">
                    <ComboBoxItem Content="OpenAI" Tag="OpenAI|OpenAI|https://api.openai.com/v1/chat/completions|gpt-3.5-turbo"/>
                    <ComboBoxItem Content="Azure OpenAI" Tag="Azure OpenAI|OpenAI|https://your-resource.openai.azure.com/openai/deployments/your-deployment/chat/completions?api-version=2024-02-15-preview|gpt-4"/>
                    <ComboBoxItem Content="Anthropic Claude" Tag="Anthropic Claude|Claude|https://api.anthropic.com/v1/messages|claude-3-sonnet"/>
                    <ComboBoxItem Content="Google Gemini" Tag="Google Gemini|Gemini|https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent|gemini-pro"/>
                    <ComboBoxItem Content="DeepSeek" Tag="DeepSeek|OpenAI|https://api.deepseek.com/chat/completions|deepseek-chat"/>
                    <ComboBoxItem Content="Moonshot" Tag="Moonshot|OpenAI|https://api.moonshot.cn/v1/chat/completions|moonshot-v1-8k"/>
                    <ComboBoxItem Content="智谱GLM" Tag="智谱GLM|OpenAI|https://open.bigmodel.cn/api/paas/v4/chat/completions|glm-4"/>
                    <ComboBoxItem Content="Ollama" Tag="Ollama|OpenAI|http://localhost:11434/v1/chat/completions|llama2"/>
                    <ComboBoxItem Content="自定义" Tag="自定义|OpenAI||"/>
                </ComboBox>
            </StackPanel>

            <!-- API地址 -->
            <StackPanel Spacing="4">
                <TextBlock Text="API地址 *"/>
                <TextBox x:Name="UrlTextBox"
                         PlaceholderText="https://api.openai.com/v1/chat/completions"/>
            </StackPanel>

            <!-- API密钥 -->
            <StackPanel Spacing="4">
                <TextBlock Text="API密钥 *"/>
                <PasswordBox x:Name="ApiKeyPasswordBox"
                             PlaceholderText="输入API密钥"/>
            </StackPanel>

            <!-- 模型名称 -->
            <StackPanel Spacing="4">
                <TextBlock Text="模型名称 *"/>
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ModelNameTextBox"
                             Grid.Column="0"
                             PlaceholderText="例如：gpt-4"/>
                    <Button x:Name="FetchModelsButton"
                            Grid.Column="1"
                            Content="获取模型"
                            Click="FetchModelsButton_Click"
                            MinWidth="80"/>
                </Grid>
            </StackPanel>

            <!-- 高级参数 -->
            <TextBlock Text="高级参数" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,8,0,0"/>

            <!-- 最大令牌数 -->
            <StackPanel Spacing="4">
                <TextBlock Text="最大令牌数"/>
                <NumberBox x:Name="MaxTokensNumberBox"
                           Value="4096"
                           Minimum="1"
                           Maximum="128000"
                           SpinButtonPlacementMode="Inline"/>
            </StackPanel>

            <!-- 温度 -->
            <StackPanel Spacing="4">
                <Grid>
                    <TextBlock Text="温度" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="TemperatureValueText"
                               Text="0.7"
                               HorizontalAlignment="Right"/>
                </Grid>
                <Slider x:Name="TemperatureSlider"
                        Minimum="0"
                        Maximum="2"
                        StepFrequency="0.1"
                        Value="0.7"
                        ValueChanged="TemperatureSlider_ValueChanged"/>
            </StackPanel>

            <!-- 超时时间 -->
            <StackPanel Spacing="4">
                <TextBlock Text="超时时间（秒）"/>
                <NumberBox x:Name="TimeoutNumberBox"
                           Value="30"
                           Minimum="5"
                           Maximum="300"
                           SpinButtonPlacementMode="Inline"/>
            </StackPanel>

            <!-- 最大并发数 -->
            <StackPanel Spacing="4">
                <TextBlock Text="最大并发数"
                           ToolTipService.ToolTip="该API同时处理的最大翻译请求数"/>
                <NumberBox x:Name="MaxConcurrentNumberBox"
                           Value="3"
                           Minimum="1"
                           Maximum="100"
                           SpinButtonPlacementMode="Inline"/>
            </StackPanel>

            <!-- 手动权重 -->
            <StackPanel Spacing="4">
                <TextBlock>
                    <Run Text="手动权重"/>
                    <Run Text=" (可选)" FontSize="12" Foreground="Gray"/>
                </TextBlock>
                <TextBlock Text="权重越高，该API被优先使用的概率越大。留空则完全使用自动计算的权重。"
                           FontSize="12"
                           Foreground="Gray"
                           TextWrapping="Wrap"/>
                <NumberBox x:Name="WeightNumberBox"
                           Value="50"
                           Minimum="1"
                           Maximum="100"
                           SpinButtonPlacementMode="Inline"/>
            </StackPanel>

            <!-- 启用状态 -->
            <StackPanel Spacing="4">
                <ToggleSwitch x:Name="IsEnabledToggle"
                              Header="启用此端点"
                              IsOn="True"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
